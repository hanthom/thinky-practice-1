html, body
  height 100%
*
  padding 0
  margin 0
  box-sizing border-box
  font-family sans-serif
a
  text-decoration none
ul
  list-style none
  li
    display inline-block
button, input
  border 1px black solid
  background white
  font-size 18px
  &:focus
    outline none
  &:hover:not(input)
    color white
    cursor pointer
    background-color cadetblue
  &.alter
    color white
    background  cadetblue
    &:hover
      background white

.container
  max-width 980px
  width: 100%
  margin 0 auto

.linkBtn
  border 0
  background transparent
  &:hover
    text-decoration underline
    background inherit

.flex
  display flex
  &.space-between
    justify-content space-between
  &.vertical-center
    align-items center
  &.content-right
    justify-content flex-end
.relative
  position relative
  .bgOpac
    position absolute
    z-index -100000
    top 0
    left 0
    width 100%
    height 100vh
    background rgba(0,0,0,0.3)
