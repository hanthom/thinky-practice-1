*
  padding 0
  margin 0
  box-sizing border-box
  font-family sans-serif
ul
  list-style none
  li
    display inline-block
button, input
  padding 10px
  margin: 10px
  border 1px black solid
  background white
  font-size 18px
  &:focus
    outline none
  &:hover:not(input)
    color cadetblue
    cursor pointer
  &.alter
    color white
    background  cadetblue
    &:hover
      background white

.container
  max-width 980px
  width: 100%
  margin 0 auto

.flex
  display flex
  &.space-between
    justify-content space-between
