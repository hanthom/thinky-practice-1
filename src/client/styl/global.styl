*
  padding 0
  margin 0
  box-sizing border-box
  font-family sans-serif

.container
  max-width 980px
  width: 100%
  margin 0 auto
ul
  list-style none
  li
    display inline-block
button, input
  padding 10px
  margin: 10px
  border 1px black solid
  background white
  font-size 18px
  &:focus
    outline none
  &:hover:not(input)
    color: cadetblue
    cursor: pointer
